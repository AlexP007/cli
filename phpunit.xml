<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="autoload.php"
         colors="true"
         executionOrder="random"
         resolveDependencies="true">
    <testsuites>
        <testsuite name="Main">
            <directory>tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
</phpunit>